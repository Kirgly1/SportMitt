<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiseSectionActivity">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/miit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView1">

        <Button
            android:id="@+id/button_volleyball_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Волейбол"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_football_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Мини-футбол"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_basketball_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Баскетбол"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_belly_dance_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Танец живота"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_fencing_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Фехтование"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_badminton_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Бадминтон"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_table_tennis_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Настольный теннис"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_boxing_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Бокс"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_pilates_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Пилатес"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button_aerobics_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/blue"
            android:text="Аэробика"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"/>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>